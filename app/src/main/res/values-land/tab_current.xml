<?xml version="1.0" encoding="utf-8"?>

<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <style
        name="tab.current" >
        <item name="android:gravity">left|start</item>
        <item name="android:textSize">@dimen/textNormal</item>
    </style>

    <style
        name="tab.current.fragment" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/standard_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/standard_margin</item>
    </style>

    <style
        name="tab.current.fragment.1" >
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_above">@id/fragment_3</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart" tools:targetApi="17">true</item>
        <item name="android:layout_toLeftOf">@id/center</item>
        <item name="android:layout_toStartOf" tools:targetApi="17">@id/center</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginRight">@dimen/half_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/half_margin</item>
    </style>

    <style
        name="tab.current.fragment.2" >
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_above">@id/fragment_3</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:targetApi="17">true</item>
        <item name="android:layout_toRightOf">@id/center</item>
        <item name="android:layout_toEndOf" tools:targetApi="17">@id/center</item>
        <item name="android:layout_alignBottom">@id/fragment_1</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/half_margin</item>
    </style>

    <style
        name="tab.current.fragment.3" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
    </style>

</resources>