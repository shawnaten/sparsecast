<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/standard_margin" >

    <HorizontalScrollView
        android:id="@+id/details_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/temp_min_icon"
                style="@style/details_icon" />
            <com.shawnaten.tools.MaterialTextView
                android:id="@+id/temp_min_text"
                style="@style/text.subhead"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin" />

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/temp_max_icon"
                style="@style/details_icon" />
            <com.shawnaten.tools.MaterialTextView
                android:id="@+id/temp_max_text"
                style="@style/text.subhead"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin" />

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/sunrise_icon"
                style="@style/details_icon" />
            <com.shawnaten.tools.MaterialTextView
                android:id="@+id/sunrise_text"
                style="@style/text.subhead"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin" />

            <com.caverock.androidsvg.SVGImageView
                android:id="@+id/sunset_icon"
                style="@style/details_icon" />
            <com.shawnaten.tools.MaterialTextView
                android:id="@+id/sunset_text"
                style="@style/text.subhead"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </HorizontalScrollView>

    <include layout="@layout/weather_bar_image"
        android:id="@+id/weather_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_holder"
        android:layout_marginTop="@dimen/standard_margin" />

</RelativeLayout>