<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text.display_1" >
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text.display_1.light" >
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="text.display_2" >
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text.display_2.light" >
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="text.headline" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text.title" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text.title.light" >
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="text.subhead" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style
        name="text.subhead.light" >
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="text.body_2" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text.body_1" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="text.body_1.light" >
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <style name="text.caption" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="text.caption.light" >
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="text.button" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text.tab" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text.tab.light" >
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppBaseTheme.AppTheme" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="full_width_standard_margin">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>

    </style>

    <style name="wrap_content_no_margin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="list_three_item_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_three_item_icon_image">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="list_three_item_icon_text">
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginStart">72dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_three_item_icon_text.primary">
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="list_three_item_icon_text.secondary">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>

</resources>
