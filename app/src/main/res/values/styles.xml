<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >
	
	<style 
	    name="tab" >
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:freezesText">true</item>
	</style>

    <style name="tab.current.alert" >
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:paddingStart" tools:targetApi="17">@dimen/standard_margin</item>
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:paddingEnd" tools:targetApi="17">@dimen/standard_margin</item>
        <item name="android:minHeight">@dimen/alert_views</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style
        name="tab.current.stat" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="tab.current.stat.large" >
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style
        name="tab.week" >

    </style>

    <style name="tab.week.item">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <style name="tab.week.item.group" >
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tab.week.item.group.summary" >
        <item name="android:paddingLeft">@dimen/large_margin</item>
        <item name="android:paddingStart" tools:targetApi="17">@dimen/large_margin</item>
        <item name="android:paddingRight">@dimen/large_margin</item>
        <item name="android:paddingEnd" tools:targetApi="17">@dimen/large_margin</item>
    </style>

    <style name="tab.week.item.child" >

    </style>

    <style name="tab.week.item.child.land" >
        <item name="android:paddingLeft">@dimen/standard_margin</item>
        <item name="android:paddingStart" tools:targetApi="17">@dimen/standard_margin</item>
        <item name="android:paddingRight">@dimen/standard_margin</item>
        <item name="android:paddingEnd" tools:targetApi="17">@dimen/standard_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">left|start|center_vertical</item>

    </style>

    <style name="tab.week.item.child.port" >
        <item name="android:gravity">center</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppBaseTheme.AppTheme" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:name">@string/app_name</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarWidget</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTab</item>

    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse" >
        <item name="android:background">@color/green_500</item>
        <item name="android:backgroundStacked">@color/green_500</item>
    </style>

    <style name="ActionBarWidget" parent="android:Theme.Holo" >
        <item name="android:textColorHint">@color/secondary_text_dark</item>
    </style>

    <style name="ActionBarTab" parent="android:Widget.Holo.Light.ActionBar.TabView.Inverse" >
        <item name="android:background">@drawable/tab_indicator_ab_weather</item>
    </style>

</resources>
