<?xml version="1.0" encoding="utf-8"?>

<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <style
        name="tab.info" >
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom" tools:targetApi="17">@dimen/half_margin</item>
        <item name="android:layout_marginLeft">@dimen/half_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/half_margin</item>
    </style>

    <style
        name="tab.info.icon" >
        <item name="android:layout_width">@dimen/textNormal</item>
        <item name="android:layout_height">@dimen/textNormal</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom" tools:targetApi="17">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginStart" tools:targetApi="17">0dp</item>
    </style>

</resources>