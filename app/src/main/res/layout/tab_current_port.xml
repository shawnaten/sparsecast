<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tab" >

    <HorizontalScrollView
        android:id="@+id/alert_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none" >
        <LinearLayout
            android:id="@+id/alert_view_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/weather_icon"
        android:contentDescription="@string/weather_icon_description"
        android:layout_below="@id/alert_view"
        android:layout_above="@+id/feels_like"
        android:layout_toRightOf="@id/humidity"
        android:layout_toEndOf="@id/humidity"
        android:layout_toLeftOf="@id/low_temp_time"
        android:layout_toStartOf="@id/low_temp_time"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/temp"
        style="@style/tab.current.port.stat.large"
        android:layout_below="@id/alert_view"
        android:layout_alignBottom="@+id/high_temp_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/humidity"
        style="@style/tab.current.port.stat.large"
        android:layout_below="@id/temp"
        android:layout_alignBottom="@+id/low_temp_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/high_temp"
        style="@style/tab.current.port.stat.large"
        android:layout_below="@id/alert_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@id/high_temp_time"
        style="@style/tab.current.port.stat.small"
        android:layout_below="@id/high_temp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:textStyle="bold" />
    <TextView
        android:id="@id/low_temp"
        style="@style/tab.current.port.stat.large"
        android:layout_below="@id/high_temp_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/low_temp_time"
        style="@style/tab.current.port.stat.small"
        android:layout_below="@id/low_temp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/feels_like"
        style="@style/tab.current.port.small"
        android:layout_below="@id/low_temp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:layout_width="wrap_content" />
    <TextView
        android:id="@+id/sun"
        style="@style/tab.current.port.small"
        android:layout_below="@id/feels_like"
        android:paddingTop="4dp" />
    <TextView 
        android:id="@+id/summary"
        style="@style/tab.current.port"
        android:layout_below="@id/sun"
        android:paddingTop="4dp" />
    <RelativeLayout
        android:id="@+id/summaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/summary" >

        <TextView
            android:id="@+id/next_hour"
            style="@style/tab.current.port"
            android:layout_alignParentTop="true"
            android:paddingTop="4dp" />
        <TextView
            android:id="@+id/next_24_hours"
            style="@style/tab.current.port"
            android:layout_below="@id/next_hour"
            android:paddingTop="4dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/details_1"
        style="@style/tab.current.port"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/details_2"
        style="@style/tab.current.port"
        android:layout_width="0dp"
        android:layout_height="0dp" />
          
</RelativeLayout>
