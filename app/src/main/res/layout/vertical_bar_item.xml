<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/standard_margin"
    android:paddingLeft="@dimen/standard_margin"
    android:paddingRight="@dimen/standard_margin"
    android:paddingStart="@dimen/standard_margin">

    <LinearLayout
        android:id="@+id/blocks"
        android:layout_width="@dimen/vertical_weather_bar_width"
        android:layout_height="@dimen/vertical_weather_bar_width"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/data"
        style="@style/text.body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/blocks"
        android:layout_toStartOf="@id/blocks"
        android:paddingEnd="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/time"
        style="@style/text.body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/data"
        android:layout_toStartOf="@id/data"
        android:paddingEnd="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/summary"
        style="@style/text.body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/blocks"
        android:layout_toRightOf="@id/blocks"
        android:ellipsize="middle"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:singleLine="true" />

</RelativeLayout>