<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attributions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="16dp">

    <TextView
        android:id="@+id/and"
        style="@style/text.caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/and_short"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"/>

    <ImageView
        android:id="@+id/powered_by_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/and"
        android:layout_toStartOf="@id/and"
        android:src="@drawable/powered_by_google_light"
        android:layout_alignTop="@id/and"
        android:layout_alignBottom="@id/and"/>

    <TextView
        android:id="@+id/powered_by_forecast"
        style="@style/text.caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/and"
        android:layout_toEndOf="@id/and"
        android:text="@string/powered_by_forecast"/>

    <TextView
        android:id="@+id/third_party"
        style="@style/text.caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColorLink="@color/text_secondary"
        android:layout_below="@id/powered_by_forecast"
        android:visibility="gone"/>

</RelativeLayout>