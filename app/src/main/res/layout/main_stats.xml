<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/title"
        style="@style/tab.current.stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="middle"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/weather_icon"
        android:contentDescription="@string/weather_icon_description"
        android:layout_below="@id/title"
        android:layout_above="@+id/feels_like"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/temp"
        style="@style/tab.current.stat.large"
        android:layout_below="@id/title"
        android:layout_alignBottom="@+id/high_temp_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/humidity"
        style="@style/tab.current.stat.large"
        android:layout_below="@id/temp"
        android:layout_alignBottom="@+id/low_temp_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/high_temp"
        style="@style/tab.current.stat.large"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@id/high_temp_time"
        style="@style/tab.current.stat"
        android:layout_below="@id/high_temp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/low_temp"
        style="@style/tab.current.stat.large"
        android:layout_below="@id/high_temp_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@id/low_temp_time"
        style="@style/tab.current.stat"
        android:layout_below="@id/low_temp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@id/feels_like"
        style="@style/tab.current.stat"
        android:layout_below="@id/low_temp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content" />

</RelativeLayout>