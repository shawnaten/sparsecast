<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/weather_bar_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/weather_bar_height" />

        <ImageView
            android:id="@+id/weather_bar_image"
            android:layout_width="@dimen/weather_bar_width"
            android:layout_height="@dimen/weather_bar_height"
            android:contentDescription="@string/weather_bar_description" />

    </FrameLayout>

</HorizontalScrollView>
