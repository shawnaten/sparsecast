<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/photo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <GridLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Space
                android:layout_width="@dimen/standard_margin"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_rowSpan="3" />

            <TextView
                android:id="@+id/temp"
                style="@style/text.display_2.light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="top"
                android:layout_row="1"
                android:layout_rowSpan="3"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/feels_like"
                style="@style/text.caption.light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="bottom"
                android:layout_row="1"
                android:layout_rowSpan="3"
                android:singleLine="true" />

            <Space
                android:layout_width="@dimen/standard_margin"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_rowSpan="3" />

            <TextView
                android:id="@+id/main_loc"
                style="@style/text.title.light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/sec_loc"
                style="@style/text.body_1.light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/current_condition"
                style="@style/text.subhead.light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3"
                android:ellipsize="end"
                android:singleLine="true" />

            <Space
                android:layout_width="@dimen/standard_margin"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="1"
                android:layout_rowSpan="3" />

            <com.shawnaten.simpleweather.ui.SlidingTabLayout
                android:id="@+id/sliding_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="5"
                android:layout_row="4"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp" />

        </GridLayout>

    </RelativeLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/half_margin"
        fab:menu_colorNormal="@color/primary"
        fab:menu_colorPressed="@color/primary_dark"
        fab:menu_icon="@drawable/ic_add_black_24dp" />

    <include layout="@layout/toolbar"/>

</RelativeLayout>