<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tab" >

    <HorizontalScrollView
        android:id="@+id/alert_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none" >
        <LinearLayout
            android:id="@+id/alert_view_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <Space
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/weather_icon"
        android:contentDescription="@string/weather_icon_description"
        android:layout_below="@id/alert_view"
        android:layout_above="@+id/feels_like"
        android:layout_toRightOf="@+id/humidity"
        android:layout_toEndOf="@id/humidity"
        android:layout_toLeftOf="@+id/low_temp_time"
        android:layout_toStartOf="@id/low_temp_time"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/temp"
        style="@style/tab.current.land.stat.large"
        android:layout_below="@id/alert_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/high_temp_time" />

    <TextView
        android:id="@id/humidity"
        style="@style/tab.current.land.stat.large"
        android:layout_below="@id/temp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/low_temp_time" />

    <TextView
        android:id="@+id/high_temp"
        style="@style/tab.current.land.stat.large.left"
        android:layout_below="@id/alert_view"
        android:layout_toLeftOf="@id/center"
        android:layout_toStartOf="@id/center" />

    <TextView
        android:id="@id/high_temp_time"
        style="@style/tab.current.land.stat.small.left"
        android:layout_below="@id/high_temp"
        android:layout_toLeftOf="@id/center"
        android:layout_toStartOf="@id/center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/low_temp"
        style="@style/tab.current.land.stat.large.left"
        android:layout_below="@id/high_temp_time"
        android:layout_toLeftOf="@id/center"
        android:layout_toStartOf="@id/center" />

    <TextView
        android:id="@id/low_temp_time"
        style="@style/tab.current.land.stat.small.left"
        android:layout_below="@id/low_temp"
        android:layout_toLeftOf="@id/center"
        android:layout_toStartOf="@id/center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feels_like"
        style="@style/tab.current.land.small"
        android:layout_below="@id/low_temp"
        android:layout_toRightOf="@id/humidity"
        android:layout_toEndOf="@id/humidity"
        android:layout_toLeftOf="@id/low_temp_time"
        android:layout_toStartOf="@id/low_temp_time"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:paddingRight="0dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/summary"
        style="@style/tab.current.land.small.right"
        android:layout_below="@id/alert_view"
        android:layout_toRightOf="@id/center"
        android:layout_toEndOf="@id/center" />

    <TextView
        android:id="@+id/details_1"
        style="@style/tab.current.land.small.right"
        android:layout_below="@id/summary"
        android:layout_toRightOf="@id/center"
        android:layout_toEndOf="@id/center"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/details_2"
        style="@style/tab.current.land.small"
        android:layout_below="@id/summary"
        android:layout_toRightOf="@id/details_1"
        android:layout_toEndOf="@id/details_1"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingTop="4dp" />

    <RelativeLayout
        android:id="@+id/summaries"
        android:layout_below="@id/low_temp_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/next_hour"
            style="@style/tab.current.land.small"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:paddingTop="4dp"
            android:gravity="center" />
        <TextView
            android:id="@+id/next_24_hours"
            style="@style/tab.current.land.small"
            android:layout_below="@id/next_hour"
            android:layout_width="match_parent"
            android:paddingTop="4dp"
            android:gravity="center" />

    </RelativeLayout>

    <TextView
        android:id="@+id/sun"
        style="@style/tab.current.land.small"
        android:layout_width="0dp"
        android:layout_height="0dp" />
          
</RelativeLayout>