<?xml version="1.0" encoding="utf-8"?>

<com.google.android.gms.ads.formats.NativeAppInstallAdView
    android:id="@+id/install_ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin"
            android:layout_alignTop="@+id/headline"
            android:layout_alignBottom="@+id/advertiser"
            android:scaleType="center"/>

        <TextView
            android:id="@id/headline"
            style="@style/text.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:layout_toEndOf="@id/logo"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/half_margin"/>

        <TextView
            android:id="@+id/body"
            style="@style/text.body_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:layout_toEndOf="@id/logo"
            android:layout_below="@id/headline"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/half_margin"/>

        <TextView
            android:id="@id/advertiser"
            style="@style/text.caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo"
            android:layout_toEndOf="@id/logo"
            android:layout_below="@id/body"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/advertiser"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</com.google.android.gms.ads.formats.NativeAppInstallAdView>