<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <HorizontalScrollView
        android:id="@+id/title_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none" >

        <com.shawnaten.tools.MaterialTextView
            android:id="@+id/title"
            style="@style/text.title" />

    </HorizontalScrollView>


    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/temp_label"
        style="@style/text.caption"
        android:layout_below="@id/title_holder"
        android:text="@string/temp" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/temp"
        style="@style/stat_text"
        android:layout_below="@id/temp_label" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/moisture_label"
        style="@style/text.caption"
        android:layout_below="@id/title_holder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/moisture"
        style="@style/stat_text"
        android:layout_below="@id/moisture_label"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/low_temp_time"
        style="@style/text.caption"
        android:layout_below="@id/temp"
        android:layout_marginTop="@dimen/standard_margin" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/low_temp"
        style="@style/stat_text"
        android:layout_below="@id/low_temp_time" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/high_temp_time"
        style="@style/text.caption"
        android:layout_below="@id/moisture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/standard_margin" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/high_temp"
        style="@style/stat_text"
        android:layout_below="@id/high_temp_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.caverock.androidsvg.SVGImageView
        android:id="@+id/weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_holder"
        android:layout_above="@id/time"
        android:layout_alignLeft="@id/currently_holder"
        android:layout_alignStart="@id/currently_holder"
        android:layout_alignRight="@id/currently_holder"
        android:layout_alignEnd="@id/currently_holder"
        android:layout_margin="@dimen/standard_margin" />

    <com.shawnaten.tools.MaterialTextView
        android:id="@+id/time"
        style="@style/text.body_2"
        android:layout_alignBottom="@id/low_temp"
        android:layout_centerHorizontal="true" />

    <HorizontalScrollView
        android:id="@+id/currently_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/low_temp"
        android:layout_centerHorizontal="true"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none" >

        <com.shawnaten.tools.MaterialTextView
            android:id="@+id/currently"
            style="@style/text.body_1" />

    </HorizontalScrollView>

</RelativeLayout>